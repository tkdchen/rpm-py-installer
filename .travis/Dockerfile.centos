FROM centos

WORKDIR /build
COPY . .

RUN yum -y update
RUN yum -y install epel-release
RUN yum -y install \
  --setopt=deltarpm=0 \
  --setopt=install_weak_deps=false \
  --setopt=tsflags=nodocs \
  # -- RPM packages required for installing --
  rpm-libs \
  redhat-rpm-config \
  gcc \
  python34-devel \
  python-devel \
  /usr/bin/python3.4 \
  # python2.7 is on only CentOS7. python2.6 is on CentOS6.
  /usr/bin/python2.7 \
  # -- RPM packages required for a specified case --
  /usr/bin/git \
  rpm-build-libs \
  /usr/bin/yumdownloader \
  /usr/bin/cpio \
  && yum clean all
RUN python3 -m ensurepip
RUN python3 -m pip install --upgrade pip setuptools
RUN python3 -m pip install tox

CMD ["/usr/bin/tox"]
